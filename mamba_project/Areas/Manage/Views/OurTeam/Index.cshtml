@model List<OurTeam>
@{
    int count = 0;
}

<div class="container">
    <a class="btn btn-primary" asp-action="Create">Create</a>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">FullName</th>
                <th scope="col">Position</th>
                <th scope="col">Image</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <th>@count</th>
                    <td>@item.FullName</td>
                    <td>@item.Position</td>
                    <td>
                        <div style="width:100px">
                            <img width="100%" src="~/Upload/Team/@item.ImgUrl" />
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>